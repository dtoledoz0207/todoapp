<p id="notice"><%= notice %></p>

<h1>
  <%= @todolist.title %>
</h1>

<%= link_to 'Edit', edit_todolist_path(@todolist) %> |
<%= link_to 'Back', todolists_path %>


<br><br>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newTaskModal">
  New task
</button>

<br><br>

<h2>Tasks</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @todolist.tasks.each do |task| %>

      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show' %></td>
        <td><%= link_to 'Edit' %></td>
        <td><%= link_to 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="newTaskModal" tabindex="-1" role="dialog" aria-labelledby="newTaskModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <h5 class="modal-title" id="newTaskModalLabel">New task</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-dark">
        <%= form_with(model: [ @todolist, @todolist.tasks.build ], local: true) do |form| %>
          <div class="field">
            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>

          <div class="field">
            <%= form.label :description %><br>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
          
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <div class="actions">
              <%= form.submit 'Create task', class: 'btn btn-primary' %>
        </div>
      </div>
        <% end %>
    </div>
  </div>
</div>